<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/folderFragment">

    <fragment
        android:id="@+id/folderFragment"
        android:name="com.example.studentnotes.ui.FolderFragment"
        android:label="Folders">
        <action
            android:id="@+id/action_folderFragment_to_noteFragment"
            app:destination="@id/noteFragment" />
    </fragment>

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.studentnotes.ui.NoteFragment"
        android:label="{folderName}">
        <argument
            android:name="folderId"
            app:argType="integer" />
        <argument
            android:name="folderName"
            app:argType="string" />
        <action
            android:id="@+id/action_noteFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.studentnotes.ui.AddEditNoteFragment"
        android:label="Add/Edit Note">
        <argument
            android:name="note"
            app:argType="com.example.studentnotes.data.entity.Note"
            app:nullable="true" />
        <argument
            android:name="folderId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

</navigation>
